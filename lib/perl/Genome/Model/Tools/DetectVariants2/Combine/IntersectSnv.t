#!/usr/bin/env perl

use strict;
use warnings;

use above "Genome";
use Test::More;
use File::Compare;

$ENV{UR_DBI_NO_COMMIT} = 1;
$ENV{UR_USE_DUMMY_AUTOGENERATED_IDS} = 1;

BEGIN {
    my $archos = `uname -a`;
    if ($archos !~ /64/) {
        plan skip_all => "Must run from 64-bit machine";
    } else {
        plan tests => 7;
    }
};

use_ok( 'Genome::Model::Tools::DetectVariants2::Combine::IntersectSnv');

my $test_data_dir  = '/gsc/var/cache/testsuite/data/Genome-Model-Tools-DetectVariants2-Combine-IntersectSnv';
my $refbuild_id = 101947881;
my $tumor_bam_file  = $test_data_dir . '/flank_tumor_sorted.bam';
my $normal_bam_file  = $test_data_dir . '/flank_normal_sorted.bam';
my $input_directory_a = $test_data_dir."/samtools-r599-";
my $input_directory_b = $test_data_dir."/varscan-somatic-2.2.4-";
my $expected_output = $test_data_dir."/expected.v2";

my $test_output_dir = File::Temp::tempdir('Genome-Model-Tools-DetectVariants2-Combine-IntersectSnv-XXXXX', DIR => '/gsc/var/cache/testsuite/running_testsuites', CLEANUP => 1);

my $union_snv_object = Genome::Model::Tools::DetectVariants2::Combine::IntersectSnv->create(
    input_directory_a           => $input_directory_a,
    input_directory_b           => $input_directory_b,
    aligned_reads_input => $tumor_bam_file,
    control_aligned_reads_input => $normal_bam_file,
    output_directory    => $test_output_dir,
    reference_build_id => $refbuild_id,
);

ok($union_snv_object, 'created IntersectSnv object');
ok($union_snv_object->execute(), 'executed IntersectSnv object');

my @files = qw| snvs.hq.bed
                snvs.lq.a.bed
                snvs.lq.b.bed
                snvs.lq.bed |;

for my $file (@files) {
    my $test_output = $test_output_dir."/".$file;
    my $expected_output = $expected_output."/".$file;
    is(compare($test_output,$expected_output),0, "Found no difference between test output: ".$test_output." and expected output:".$expected_output);
}

