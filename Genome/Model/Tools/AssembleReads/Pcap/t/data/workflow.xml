<?xml version='1.0' standalone='yes'?>
<workflow name="pipeline" executor="Workflow::Executor::SerialDeferred">
  <link fromOperation="input connector"    fromProperty="config file"      toOperation="parse config file"  toProperty="config_file" />
  <link fromOperation="parse config file"  fromProperty="disk location"    toOperation="create directories" toProperty="disk_location" />
  <link fromOperation="parse config file"  fromProperty="project name"     toOperation="create directories" toProperty="project_name" />
  <link fromOperation="parse config file"  fromProperty="assembly version" toOperation="create directories" toProperty="assembly_version" />
  <link fromOperation="parse config file"  fromProperty="assembly date"    toOperation="create directories" toProperty="assembly date" />
  <link fromOperation="create directories" fromProperty="result"           toOperation="output connector"   toProperty="result" />
  <operation name="parse config file">
    <operationtype commandClass="Genome::Model::Tools::AssemblReads::Pcap::ParseConfigFile" typeClass="Workflow::OperationType::Command" />
  </operation>
  <operation name="create directories">
    <operationtype commandClass="Genome::Model::Tools::AssembleReads::Pcap::CreateDirectories" typeClass="Workflow::OperationType::Command" />
  </operation>
  <operationtype typeClass="Workflow::OperationType::Model">
    <inputproperty>config file</inputproperty>
  </operationtype>
</workflow>
