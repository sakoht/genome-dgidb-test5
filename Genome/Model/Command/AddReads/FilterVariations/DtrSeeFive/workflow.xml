<?xml version='1.0' standalone='yes'?>
<workflow name="Filtered Variations">

    <link fromOperation="input connector" fromProperty="ref_seq_id" toOperation="DtrSeeFive" toProperty="ref_seq_id" />
    <link fromOperation="input connector" fromProperty="basedir" toOperation="DtrSeeFive" toProperty="basedir" />
    <link fromOperation="input connector" fromProperty="experimental_metric_model_file" toOperation="SomaticSnper" toProperty="subject_metric_file" />
    <link fromOperation="input connector" fromProperty="c5src" toOperation="DtrSeeFive" toProperty="c5src" />
    <link fromOperation="input connector" fromProperty="ref_seq_id" toOperation="SomaticSnper" toProperty="ref_seq_id" />
    <link fromOperation="input connector" fromProperty="basedir" toOperation="SomaticSnper" toProperty="basedir" />
    <link fromOperation="input connector" fromProperty="normal_snp_file" toOperation="SomaticSnper" toProperty="control_snp_file" />
    <link fromOperation="input connector" fromProperty="parent_event" toOperation="GenerateFigure3Files" toProperty="parent_event" />
    <link fromOperation="input connector" fromProperty="ref_seq_id" toOperation="GenerateFigure3Files" toProperty="ref_seq_id" />
    <link fromOperation="input connector" fromProperty="basedir" toOperation="GenerateFigure3Files" toProperty="basedir" />
 
   <link fromOperation="SomaticSnper" fromProperty="output_file" toOperation="DtrSeeFive" toProperty="experimental_metric_model_file" />
   <link fromOperation="DtrSeeFive" fromProperty="decision_tree_output" toOperation="GenerateFigure3Files" toProperty="binomial_output_file" />
   <link fromOperation="GenerateFigure3Files" fromProperty="validated_somatic_variants" toOperation="output connector" toProperty="validated_somatic_variants" />

    <operation name="DtrSeeFive">
        <operationtype commandClass="Genome::Model::Tools::Snp::Filters::DtrSeeFive" typeClass="Workflow::OperationType::Command" />
    </operation>
    <operation name="SomaticSnper">
        <operationtype commandClass="Genome::Model::Tools::Snp::Filters::SomaticSnper" typeClass="Workflow::OperationType::Command" />
    </operation>
    <operation name="GenerateFigure3Files">
        <operationtype commandClass="Genome::Model::Tools::Snp::Filters::GenerateFigure3Files" typeClass="Workflow::OperationType::Command" />
    </operation>

    <operationtype typeClass="Workflow::OperationType::Model">
        <inputproperty>parent_event</inputproperty>
        <inputproperty>ref_seq_id</inputproperty>
        <inputproperty>basedir</inputproperty>
        <inputproperty>experimental_metric_model_file</inputproperty>
        <inputproperty>normal_snp_file</inputproperty>
        <inputproperty>experimental_metric_dtr_file</inputproperty>
        <inputproperty>c5src</inputproperty>
        <outputproperty>validated_somatic_variants</outputproperty>
    </operationtype>
</workflow>
