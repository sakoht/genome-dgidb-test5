#!/gsc/bin/perl

use strict;
use warnings;

use above 'Genome';

use Test::More tests => 3;

$ENV{UR_DBI_NO_COMMIT} = 1;
$ENV{UR_USE_DUMMY_AUTOGENERATED_IDS} = 1;

BEGIN {
        use_ok('Genome::SoftwareResult');
}

my $template = 'Genome-SoftwareResult-'. $ENV{USER} .'-XXXX';
my $tmp_dir = File::Temp::tempdir($template,CLEANUP => 1);

my $mock_id = 0;
my $mock_command = Genome::Model::Tools::Maq::AlignReads->create_mock(
                                                                      id => --$mock_id,
                                                                      files_to_align_path => $tmp_dir,
                                                                      ref_seq_file => $tmp_dir .'/test.refseq',
                                                                  );

my $software_result = Genome::SoftwareResult->create(
                                                     id => $mock_command->id,
                                                     class_name => ref($mock_command),
                                                 );
isa_ok($software_result,'Genome::SoftwareResult');
ok(UR::Context->_sync_databases,'sync database');
exit;

