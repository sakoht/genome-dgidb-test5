#notice= notice
=content_for :title, "#{@drug.name} acting on #{@gene.name}"

.container-fluid
  .row-fluid
    .span12
      .hero-unit
        %p
          %b Drug:
          =link_to @drug.name, "/drugs/#{@drug.name}"
        %p
          %b Gene:
          =link_to @gene.name, "/genes/#{@gene.name}"
        %p
          %b Source Database Name:
          =@interaction.citation.source_db_name
        %p
          %b Source Database Version:
          =@interaction.citation.source_db_version
        %p
          %b Types:
          %table.table.table-striped
            -@interaction.types.each do |attribute|
              %tr
                %td=attribute.value
        %p
          %b Attributes:
          %table.table.table-striped
            -@interaction.attributes.each do |attribute|
              %tr
                %td=attribute.name
                %td=attribute.value
        %p
          %b Citation:
          %p=@interaction.citation.citation
